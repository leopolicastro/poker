<section id="<%= dom_id game %>">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-white">
      <strong class="">Hand #</strong> <%= game.hands.count %>
    </h1>
  </div>
  <aside class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-4 justify-center">
    <% game.players.each do |player| %>
      <%= render Player::Component.new(player) %>
    <% end %>
  </aside>
  <%= render Game::Board::Component.new(game:) %>
</section>
